<span class="code-keyword">public</span> class EditableNavigationHandler <span class="code-keyword">extends</span> ConfigurableNavigationHandler
{
    <span class="code-keyword">private</span> <span class="code-keyword">final</span> NavigationHandler wrapped;

    <span class="code-keyword">public</span> EditableNavigationHandler(NavigationHandler wrapped)
