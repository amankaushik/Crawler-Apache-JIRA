        {
            <span class="code-keyword">return</span> ((ConfigurableNavigationHandler)<span class="code-keyword">this</span>.wrapped).getNavigationCase(facesContext, fromAction, outcome);
        }
        <span class="code-keyword">return</span> <span class="code-keyword">null</span>;
    }

    @Override
    <span class="code-keyword">public</span> Map&lt;<span class="code-object">String</span>, Set&lt;NavigationCase&gt;&gt; getNavigationCases()
    {
        <span class="code-keyword">if</span> (<span class="code-keyword">this</span>.wrapped <span class="code-keyword">instanceof</span> ConfigurableNavigationHandler)
        {
            NavigationHandler navigationHandler = findInnermostHandler(<span class="code-keyword">this</span>.wrapped);

            Map&lt;<span class="code-object">String</span>, Set&lt;NavigationCase&gt;&gt; result;
            <span class="code-keyword">if</span> (navigationHandler <span class="code-keyword">instanceof</span> ConfigurableNavigationHandler)
            {
                result = <span class="code-keyword">new</span> DelegatingMap((ConfigurableNavigationHandler)navigationHandler);
            }
            <span class="code-keyword">else</span>
            {
                result = <span class="code-keyword">new</span> HashMap&lt;<span class="code-object">String</span>, Set&lt;NavigationCase&gt;&gt;();
            }

            result.putAll(((ConfigurableNavigationHandler)<span class="code-keyword">this</span>.wrapped).getNavigationCases());
            <span class="code-keyword">return</span> result;
        }
        <span class="code-keyword">return</span> <span class="code-keyword">null</span>;
    }

    <span class="code-keyword">private</span> NavigationHandler findInnermostHandler(NavigationHandler wrapped)
    {
        <span class="code-keyword">for</span> (Field field : wrapped.getClass().getDeclaredFields())
        {
            <span class="code-keyword">if</span> (NavigationHandler.class.isAssignableFrom(field.getType()))
            {
                field.setAccessible(<span class="code-keyword">true</span>);
                <span class="code-keyword">try</span>
                {
                    NavigationHandler result = findInnermostHandler((NavigationHandler)field.get(wrapped));
                    <span class="code-keyword">if</span> (result == <span class="code-keyword">null</span>)
                    {
                        result = wrapped;
                    }
                    <span class="code-keyword">return</span> result;
                }
                <span class="code-keyword">catch</span> (IllegalAccessException e)
                {
                    <span class="code-keyword">throw</span> <span class="code-keyword">new</span> RuntimeException(e);
                }
            }
        }
        <span class="code-keyword">return</span> wrapped;
    }

    @Override
    <span class="code-keyword">public</span> void handleNavigation(FacesContext context, <span class="code-object">String</span> fromAction, <span class="code-object">String</span> outcome)
    {
